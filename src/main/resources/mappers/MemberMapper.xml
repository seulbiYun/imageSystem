<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mappers.MemberMapper">
	<select id="memberList" resultType="MemberVO">
		select * from member;
	</select>
	
	<select id="memberListByUserId" resultType="MemberVO">
		select * from member where userid = #{userid};
	</select>
	
	<select id="selectByIdAndPass" resultType="MemberVO">
		select * from image_system where userid = #{userid} and userpw = #{userpw}
	</select>
	
	<insert id = "regist" parameterType="MemberVO">
		insert into member values (#{userid},#{userpw},#{usernm},#{email},#{tel});
	</insert>
	
	<update id = "modify">
		update image_system
		set userpw = #{userpw},
			usernm = #{usernm},
			email = #{email},
			tel = #{tel}
		where userid = #{userid}	
	</update>
	
	<delete id="remove">
		delete from image_system where userid = #{userid}
	</delete>
</mapper>